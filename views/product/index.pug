extends ../layouts/common.pug
block content
    section.d-flex.justify-content-between
        h1 Product
        form(action="/product/search", method="get", class="d-flex")
            input(type="text", name="product", class="form-control")
            input(type="submit", value="search", class="ml-2 btn btn-primary")
    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src=product.image, alt='Card image cap')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.decription
                        p.card-price= product.price
                        a.btn.btn-primary(href='#') Add to card
