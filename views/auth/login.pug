extends ../layouts/common.pug
block content
    h1 add new 
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login", method="post", class="d-flex")
        label(for="email") email
        input(type="text", name="email", class="form-control", value=values?values.email:'')
        label(class="ml-3", for="password") password
        input(type="password", name="password", class="form-control", value=values?values.password:'')
        input(type="submit", value="Login", class="ml-2 btn btn-primary")